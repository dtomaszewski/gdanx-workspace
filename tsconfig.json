{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@gdanx/rent/feature-shell": ["libs/rent/feature-shell/src/index.ts"],
      "@gdanx/rent/data-access": ["libs/rent/data-access/src/index.ts"],
      "@gdanx/payments/feature-shell": [
        "libs/payments/feature-shell/src/index.ts"
      ],
      "@gdanx/payments/data-access": ["libs/payments/data-access/src/index.ts"],
      "@gdanx/shared/ui/buttons": ["libs/shared/ui/buttons/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
